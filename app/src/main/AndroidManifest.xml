<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="agut_giralt.androidpractreversi">

    <application
        android:allowBackup="true"
        android:icon="@drawable/reversi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/reversi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ActivityHelp" />
        <activity android:name=".activities.ActivityOptions" />
        <activity android:name=".activities.ActivityGame" />
        <activity android:name=".activities.ActivityResult" />
        <activity android:name=".fragments.PreferencesFragment" />
    </application>

</manifest>